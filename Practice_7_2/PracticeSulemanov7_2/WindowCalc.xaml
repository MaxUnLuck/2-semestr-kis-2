<Window x:Class="PracticeSulemanov7_2.WindowCalc"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PracticeSulemanov7_2"
        mc:Ignorable="d"
        Title="WindowCalc" Height="400" Width="400" SizeChanged="SizeControl" Closed="Close">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FF565656"/>
            <GradientStop Color="#FF929292" Offset="0.37"/>
            <GradientStop Color="#FF656565" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid Margin="0,0,566,307">
        <Grid x:Name="InputWindow" Margin="1,1,-398,-306">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="White"/>
                    <GradientStop Color="#FFB3B3B3"/>
                    <GradientStop Color="#00F0F0F0" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>
            <TextBox x:Name="TextBoxA" Margin="98,10,29,87" TextWrapping="Wrap" FontSize="25"/>
            <Label Content="Answer:" Margin="10,12,0,0" RenderTransformOrigin="1.258,-0.414" FontSize="22" Height="36" VerticalAlignment="Top" HorizontalAlignment="Left" Width="87"/>
            <Button x:Name="GetAnswer_btn" Content="Calculate answer" Margin="98,0,29,45" Click="Calculate_btn_Click" Height="35" VerticalAlignment="Bottom"/>

        </Grid>

    </Grid>
</Window>
